{
  "version": 2,
  "buildCommand": "./build.sh",
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "pages/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/pages/$1"
    }
  ],
  "functions": {
    "api/get-slots.py": {
      "maxDuration": 60
    },
    "api/health.py": {
      "maxDuration": 10
    }
  }
}
